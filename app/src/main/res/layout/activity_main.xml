<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30px"
    tools:context=".MainActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/mainToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_marginTop="56dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FBD397"
                android:clickable="true"
                android:orientation="vertical"
                android:id="@+id/mealCounterid"
                android:layout_margin="4dp"
                android:padding="20px"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/mealcounter"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meal Counter"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#FF5722"
                    android:textSize="22dp"

                    ></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#A9D6FA"
                android:clickable="true"
                android:id="@+id/members"
                android:padding="20px"
                android:orientation="vertical"
                android:layout_margin="4dp"

                >
                <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/member"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#2196F3"
                    android:textSize="22dp"
                    ></TextView>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#C498DFD9"
                android:id="@+id/expenditureLayout"
                android:orientation="vertical"
                android:padding="20px"
                android:layout_margin="4dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/expenefg"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expenditure"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#009688"
                    android:textSize="22dp"
                    ></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#AFF8B2"
                android:orientation="vertical"
                android:padding="20px"
                android:id="@+id/memberListID"
                android:layout_margin="4dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/balance"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add balance"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#4CAF50"
                    android:textSize="22dp"
                    ></TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FA9A"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                >

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00BFFF"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                >
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>